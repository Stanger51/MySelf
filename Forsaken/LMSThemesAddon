function Download(path, fileName, filepath)
    if isfile(filepath) then
        return 
    end
    local function downloadFile(url, savePath)
        local success, response = pcall(function()
            local Request = http_request or request or syn.request
            return Request({
                Url = url,
                Method = "GET"
            })
        end)
        if success and response then
            if response.StatusCode == 200 and response.Body then
                local folders = {}
                for folder in string.gmatch(savePath, "[^/]+") do
                    table.insert(folders, folder)
                end
                
                if #folders > 1 then
                    local currentPath = ""
                    for i = 1, #folders - 1 do
                        currentPath = currentPath == "" and folders[i] or currentPath .. "/" .. folders[i]
                        if not isfolder(currentPath) then
                            makefolder(currentPath)
                        end
                    end
                end
                writefile(savePath, response.Body)
                return true
            else
                return false
            end
        else
            return false
        end
    end
    if path ~= "" and not path:match("/$") then
        path = path .. "/"
    end
    local url = "https://raw.githubusercontent.com/Stanger51/Asset-dump/main/" .. path .. fileName
    return downloadFile(url, filepath)
end

if not isfolder("OCoolkid") then
    makefolder("OCoolkid")
end

Download("Assets/", "PleaseSpeed.mp3", "OCoolkid/PleaseSpeed.mp3")

local LMSThemes = {
    Emotional = "rbxassetid://134174166564242",
    Default = "rbxassetid://116564900353263",
    NewEmotional = "rbxassetid://80564889711353",
    NewDefault = "rbxassetid://71057332615441"
}
local ThemesFolder = game.Workspace.Themes
local localplayer = game.Players.LocalPlayer

ThemesFolder.ChildAdded:Connect(function(child)
    if string.lower(child.Name) == "30seconds" and child:IsA("Sound") then
        child.SoundId = getcustomasset("OCoolkid/PleaseSpeed.mp3")
        child.Volume = 6
    end
    if string.lower(child.Name) == "lastsurvivor" and child:IsA("Sound") then
        if child.SoundId == LMSThemes.NewDefault then
            child.SoundId = LMSThemes.Default
            child.Volume = 2.5
        end

        -- son...
        if child.SoundId == LMSThemes.NewEmotional then
            child.SoundId = LMSThemes.Emotional
            child.Volume = 2.5
        end
    end
end)
